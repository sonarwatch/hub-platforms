{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./dist/cjs/types"
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests", "dist"]
}
